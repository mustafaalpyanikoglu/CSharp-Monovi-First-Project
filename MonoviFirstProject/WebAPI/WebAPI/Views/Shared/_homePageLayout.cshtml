    <script>
        // Navbar elementini seçin
        const navbar = document.querySelector('.navbar');

        // Scroll olayını dinleyin
        window.addEventListener('scroll', function () {
            // Scroll pozisyonunu kontrol edin ve navbar'ın sınıfını ekleyin veya çıkarın
            if (window.scrollY > 0) {
                navbar.classList.add('navbar-scrolled');
            } else {
                navbar.classList.remove('navbar-scrolled');
            }
        });

        var aboutUsLink = document.querySelector('.nav-item.dropdown');
        aboutUsLink.addEventListener('mouseenter', function () {
            var submenu = this.querySelector('.dropdown-menu');
            submenu.style.animation = 'hide-animation 0.3s ease forwards';
        });

        aboutUsLink.addEventListener('mouseleave', function () {
            var submenu = this.querySelector('.dropdown-menu');
            submenu.style.animation = 'hide-animation-reverse 0.3s ease forwards';
        });
    </script>

