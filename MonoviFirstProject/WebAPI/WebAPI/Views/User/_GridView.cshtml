@using Core.Utilities.Abstract;
@using Entities.Concrete;
@model List<User>
@{
    string color = "";
}
@{
    string colorStatus = "";
}
<div class="card-body p-0">
    <table class="table table-striped">
        <thead>
            <tr>
                <th style="width: 1%">
                    #
                </th>
                <th style="width: 10%">
                    Email
                </th>
                <th style="width: 10%">
                    Ad
                </th>
                <th style="width: 10%">
                    Soyad
                </th>
                <th style="width: 0%" class="text-center">
                    Rol
                </th>
                <th style="width: 3%">
                </th>
                <th style="width: 3%">
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @item.Id
                    </td>
                    <td>
                        <a>
                            @item.Email
                        </a>
                    </td>
                    <td>
                        <a>
                            @item.FirstName
                        </a>
                    </td>
                    <td>
                        <span class="@colorStatus">@item.LastName</span>
                    </td>
                    <td class="project-state">
                        <span class="@color">@item.RoleId</span>
                    </td>
                    <td class="project-actions text-end">
                        <a class="btn btn-info btn-sm" href="/User/Update/@item.Id">
                            <i class="fas fa-pencil-alt"></i>
                            Düzenle
                        </a>
                    </td>
                    <td>
                        <a class="btn btn-danger btn-sm" href="/User/Delete/@item.Id">
                            <i class="fas fa-trash"></i>
                            Sil
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>