@using Entities.DTOs;
@model List<UserDto>

@{
    ViewData["Title"] = "DatatableJS";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@{
    string color = "";
}
@{
    string colorStatus = "";
}


<link href="https://cdn.datatables.net/v/dt/jq-3.6.0/dt-1.13.4/datatables.min.css" rel="stylesheet" />
<script src="https://cdn.datatables.net/v/dt/jq-3.6.0/dt-1.13.4/datatables.min.js"></script>

<div class="container">
    <br />
    <div style="width:90%; margin: 0 auto;">
    <table class="table table-striped table-bordered dt-responsive nowrap" width="100%" cellspacing="0" id="demoGrid">
        <thead>
            <tr>
                <th style="width: 1%">
                    Id
                </th>
                <th style="width: 7%">
                    Email
                </th>
                <th style="width: 7%">
                    FirstName
                </th>
                <th style="width: 7%">
                    LastName
                </th>
                <th style="width: 1%" class="text-center">
                    RoleId
                </th>
                <th style="width: 3%">
                </th>
                <th style="width: 3%">
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @item.Id
                    </td>
                    <td>
                        <a href="mailto:@item.Email">
                            @item.Email
                        </a>
                    </td>
                    <td>
                        <a>
                            @item.FirstName
                        </a>
                    </td>
                    <td>
                        <span class="@colorStatus">@item.LastName</span>
                    </td>
                    <td class="project-state">
                        <span class="@color">@item.RoleId</span>
                    </td>
                    <td class="project-actions text-end">
                        <a class="btn btn-info btn-sm" href="/User/Update/@item.Id">
                            <i class="fas fa-pencil-alt"></i>
                            Düzenle
                        </a>
                    </td>
                    <td>
                        <a class="btn btn-danger btn-sm" href="/User/Delete/@item.Id">
                            <i class="fas fa-trash"></i>
                            Sil
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    </div>
</div>

<script>
    $('#demoGrid').DataTable({
        language: {
            url: '//cdn.datatables.net/plug-ins/1.13.4/i18n/tr.json',
        }
    });
</script>